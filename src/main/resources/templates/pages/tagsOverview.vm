<!DOCTYPE html>
<html>
<head>
  #parse("/templates/headers.vm")
  #includeTitle("Tags Overview")

  <script type="text/javascript">
    jQuery(document).ready(function() {

        var chartData = $chart_data,
            chartCategory = $chart_categories,
            formattedData = [
                {
                    name: "Passed",
                    color: "#00B000",
                    data: []
                },
                {
                    name: "Failed",
                    color: "#FF3030",
                    data: []
                },
                {
                    name: "Skipped",
                    color: "#88AAFF",
                    data: []
                },
                {
                    name: "Pending",
                    color: "#FFFF33",
                    data: []
                },
                {
                    name: "Undefined",
                    color: "#FBB957",
                    data: []
                },
                {
                    name: "Missing",
                    color: "#FBB9A7",
                    data: []
                }
            ];

            jQuery.each(chartCategory, function (i, categoryName) {
                formattedData[0].data.push(chartData[i][0]);
                formattedData[1].data.push(chartData[i][1]);
                formattedData[2].data.push(chartData[i][2]);
                formattedData[3].data.push(chartData[i][3]);
                formattedData[4].data.push(chartData[i][4]);
                formattedData[5].data.push(chartData[i][5]);
            });
        
            $('#stacked-graph').highcharts({
            chart: {
                type: 'column',
                options3d: {
                    enabled: true,
                    alpha: 10,
                    beta: 25,
                    depth: 70
                }
            },
            title: {
                text: 'Tags',
                y: 10,
                style: {
                    fontWeight: 'bold',
                    fontSize: 'large'
                }
            },
            xAxis: {
                categories: $chart_categories
            },
            yAxis: {
                min: 0,
                title: {
                    text: ''
                }
            },
            legend: {
                align: 'left',
                x: 0,
                verticalAlign: 'bottom',
                y: 0
            },
            tooltip: {
                formatter: function() {
                    return this.x +'<br/>'
                           + this.series.name + ': '+ this.y + '<br/>'
                           + 'Total: ' + this.point.stackTotal;
                },
                style: {
                    fontWeight: 'bold',
                    color: 'darkcyan'
                }
            },
            plotOptions: {
                column: {
                    stacking: 'percent'
                }
            },
            series: formattedData
        });
    });
  </script>
</head>
<body>

#includeNavigation("tags")

#includeSummary()

#includeLead("Tags Statistics", "The following graph shows passing and failing statistics for tags")


#if(!$all_tags.isEmpty())
  <div class="container-fluid" id="charts">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div id="stacked-graph"></div>
        <br>
      </div>
    </div>
  </div>
#end

<div class="container-fluid" id="statistics">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      #if($all_tags.isEmpty())
        <p>You have no tags in your cucumber report</p>
      #else
        <table id="tablesorter" class="stats-table">
          #includeReportHeader("Tag", false)

          <tbody>
            #foreach($tag in $all_tags)
              <tr>
                <td class="tagname"><a href="$tag.getReportFileName()">$tag.getRawName()</a></td>
                <td>$tag.getScenarios()</td>
                <td>$tag.getPassedScenarios()</td>
                <td>$tag.getFailedScenarios()</td>
                <td>$tag.getSteps()</td>
                <td>$tag.getPassedSteps()</td>
                <td #if($tag.getFailedSteps() > 0)  class="failed" #end>$tag.getFailedSteps()</td>
                <td #if($tag.getSkippedSteps() > 0)   class="skipped" #end>$tag.getSkippedSteps()</td>
                <td #if($tag.getPendingSteps() > 0)   class="pending" #end>$tag.getPendingSteps()</td>
                <td #if($tag.getUndefinedSteps() > 0) class="undefined" #end>$tag.getUndefinedSteps()</td>
                <td #if($tag.getMissingSteps() > 0)   class="missing" #end>$tag.getMissingSteps()</td>
                <td class="duration">$tag.getDurations()</td>
                <td class="$tag.getStatus().getRawName()">$tag.getStatus().getLabel()</td>
              </tr>
            #end
          </tbody>

          <tfoot>
            <tr>
              <td>$all_tags.size()</td>
              <td>$all_tags_scenarios</td>
              <td>$all_tags_passed_scenarios</td>
              <td>$all_tags_failed_scenarios</td>
              <td>$all_tags_steps</td>
              <td>$all_tags_passes</td>
              <td>$all_tags_failed</td>
              <td>$all_tags_skipped</td>
              <td>$all_tags_pending</td>
              <td>$all_tags_undefined</td>
              <td>$all_tags_missing</td>
              <td class="duration">$all_durations</td>
              <td>Totals</td>
            </tr>
          </tfoot>
        </table>
      #end
    </div>
  </div>
</div>

#include("/templates/footer.html")                        

</body>
</html>
